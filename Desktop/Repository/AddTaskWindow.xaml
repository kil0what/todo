<Window x:Class="Desktop.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новая задача" Height="380" Width="350" WindowStartupLocation="CenterOwner" Background="#F9F9F9">
    <StackPanel Margin="20">
        <TextBlock Text="Название задачи" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox x:Name="TitleTextBox" Margin="0,0,0,15" Padding="5"/>

        <TextBlock Text="Описание" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox x:Name="DescriptionTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,15" Padding="5"/>

        <TextBlock Text="Категория" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox x:Name="CategoryComboBox" Margin="0,0,0,25" SelectedIndex="0">
            <ComboBoxItem Content="Дом"/>
            <ComboBoxItem Content="Работа"/>
            <ComboBoxItem Content="Учеба"/>
            <ComboBoxItem Content="Отдых"/>
        </ComboBox>

        <Button Content="СОЗДАТЬ" Click="CreateTask_Click" Background="#FF5C5C" Foreground="White" Height="40" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </StackPanel>
</Window>