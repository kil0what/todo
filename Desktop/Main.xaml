<Window x:Class="Desktop.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Todo Desktop" Height="500" Width="900" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF5C5C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F9F9F9" Padding="10">
            <StackPanel>
                <Ellipse Width="60" Height="60" Margin="0,20">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Рисунок1.png"/>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock x:Name="UserNameLabel" Text="Имя пользователя" HorizontalAlignment="Center" FontWeight="SemiBold" Margin="0,5"/>

                <TextBlock Text="Задачи" Margin="0,30,0,10" Cursor="Hand" Foreground="#5B5B5B" FontWeight="Bold"/>
                <TextBlock Text="История" Cursor="Hand" Foreground="#5B5B5B"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,10,0,20">
                <TextBlock Text="Все" Margin="0,0,15,0" Cursor="Hand" VerticalAlignment="Center" MouseLeftButtonDown="Category_Click"/>
                <TextBlock Text="Дом" Foreground="Green" Margin="0,0,15,0" Cursor="Hand" VerticalAlignment="Center" MouseLeftButtonDown="Category_Click"/>
                <TextBlock Text="Работа" Foreground="Orange" Margin="0,0,15,0" Cursor="Hand" VerticalAlignment="Center" MouseLeftButtonDown="Category_Click"/>
                <TextBlock Text="Учеба" Foreground="Blue" Margin="0,0,15,0" Cursor="Hand" VerticalAlignment="Center" MouseLeftButtonDown="Category_Click"/>
                <TextBlock Text="Отдых" Foreground="Purple" Margin="0,0,30,0" Cursor="Hand" VerticalAlignment="Center" MouseLeftButtonDown="Category_Click"/>

                <Button Content="+ Добавить задачу" Click="AddTaskButton_Click" Style="{StaticResource RoundedButtonStyle}" Height="30"/>
            </StackPanel>

            <ListBox x:Name="TasksListBox" Grid.Row="1" BorderThickness="0" Background="Transparent"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox IsChecked="{Binding IsDone}" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Margin="15,0">
                                <TextBlock Text="{Binding Title}" FontWeight="Medium" FontSize="14"/>
                                <TextBlock Text="{Binding Time}" Foreground="Gray" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <Border Grid.Column="2" Background="White" BorderBrush="#EEEEEE" BorderThickness="1,0,0,0" Padding="20">
            <StackPanel DataContext="{Binding SelectedItem, ElementName=TasksListBox}">
                <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" Margin="0,0,0,5" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding Date, StringFormat={}{0:dd MMMM yyyy}}" Foreground="Gray" Margin="0,0,0,20"/>

                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,0,0,40" Height="150" Foreground="#333333"/>

                <Button Content="Готово" Click="DoneButton_Click" Style="{StaticResource RoundedButtonStyle}" Height="35" Margin="0,0,0,10"/>
                <Button Content="Удалить" Click="DeleteButton_Click" Style="{StaticResource RoundedButtonStyle}" Height="35" Background="#E0E0E0" Foreground="Black"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>