<Window x:Class="Desktop.REGISTRATION"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="REGISTRATION" Height="600" Width="800">
    <Grid Margin="10,10,0,0">
        <Grid Margin="395,0,0,392">
            <Label Content="Welcome back" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" Margin="18
                   ,32,0,0"/>
        </Grid>

        <Grid Margin="395,91,0,392">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="51*"/>
                <ColumnDefinition Width="359*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Имя пользователя" HorizontalAlignment="Left" Margin="18
                   ,10,0,0" VerticalAlignment="Top" FontSize="22" Grid.ColumnSpan="2"/>
            <TextBox x:Name="UserNameTextBox" Text="Введите имя пользователя" HorizontalAlignment="Left" Margin="20,49,0,0" VerticalAlignment="Top" FontSize="18" BorderBrush="{x:Null}" Foreground="#FFCACACA" Grid.ColumnSpan="2"/>
        </Grid>

        <Grid Margin="395,172,-5,299">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="81*"/>
                <ColumnDefinition Width="119*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Ваша почта" HorizontalAlignment="Left" Margin="18,8,0,0" VerticalAlignment="Top" FontSize="22"/>
            <TextBox x:Name="EmailTextBox" Text="exam@yandex.ru" HorizontalAlignment="Left" Margin="20,46,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFCACACA" BorderBrush="{x:Null}"/>
        </Grid>

        <Grid Margin="0,0,400,0">
            <Image HorizontalAlignment="Left" Height="190" Margin="46,39,0,0" VerticalAlignment="Top" Width="207" Source="/Рисунок1.png"/>
        </Grid>

        <Grid Margin="395,428,0,86">
            <Button x:Name="RegisterButton" Content="Зарегестрироваться" HorizontalAlignment="Left" VerticalAlignment="Center" Width="338" Height="47" FontSize="20" Background="#FFDE4949" Foreground="White" Margin="10,0,0,0" BorderBrush="{x:Null}" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <Grid Margin="395,486,0,28" Cursor="Hand">
            <Button Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Center" Height="45" Width="338" Click="Button_Click" Background="#FFDE4949" FontSize="20" Margin="10,0,0,0" Foreground="White" BorderBrush="{x:Null}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
        <Grid Margin="395,346,0,146">
            <Label Content="Повторите пароль" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="22" Margin="18,-11,0,0"/>
            <TextBox x:Name="ConfirmPasswordTextBox" Text="Повторите пароль" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" Foreground="#FFCACACA" BorderBrush="{x:Null}" Margin="20,0,0,0" Height="33"/>
        </Grid>
        <Grid Margin="395,252,0,233">
            <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="22" Margin="18,3,0,0"/>
            <TextBox x:Name="PasswordTextBox" Text="Введите пароль" HorizontalAlignment="Left" Margin="19,42,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFCACACA" BorderBrush="{x:Null}"/>
        </Grid>





    </Grid>

</Window>
