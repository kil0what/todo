<Window x:Class="Desktop.REGISTRATION"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="REGISTRATION" Height="600" Width="800">
    <Grid Margin="10,10,0,0">
        <Grid Margin="395,0,0,392">
            <Label Content="Welcome back" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" Margin="18
                   ,32,0,0"/>
        </Grid>

        <Grid Margin="398,91,-2,392">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="51*"/>
                <ColumnDefinition Width="359*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Имя пользователя" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Top" FontSize="22" Grid.ColumnSpan="2" Height="44"/>
            <TextBox x:Name="UserNameTextBox" 
         Text="Введите имя пользователя" 
         HorizontalAlignment="Left" 
         Margin="17,44,0,0" 
         VerticalAlignment="Top" 
         FontSize="18" 
         BorderBrush="{x:Null}" 
         Foreground="#FFCACACA" 
         Grid.ColumnSpan="2" 
         Height="32"
         TextChanged="TextBox_TextChanged"
         GotFocus="TextBox_GotFocus"
         LostFocus="TextBox_LostFocus"/>
        </Grid>

        <Grid Margin="395,162,-5,322">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="81*"/>
                <ColumnDefinition Width="119*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Ваша почта" HorizontalAlignment="Center" Margin="5,3,0,0" VerticalAlignment="Top" FontSize="22"/>
            <TextBox x:Name="EmailTextBox" 
         Text="exam@yandex.ru" 
         HorizontalAlignment="Left" 
         Margin="21,42,0,0" 
         VerticalAlignment="Top" 
         FontSize="18" 
         Foreground="#FFCACACA" 
         BorderBrush="{x:Null}" 
         Height="24"
         TextChanged="TextBox_TextChanged"
         GotFocus="TextBox_GotFocus"
         LostFocus="TextBox_LostFocus" Grid.ColumnSpan="2" Width="205"/>
        </Grid>

        <Grid Margin="0,0,400,0">
            <Image HorizontalAlignment="Left" Height="190" Margin="46,39,0,0" VerticalAlignment="Top" Width="207" Source="/Рисунок1.png"/>
        </Grid>

        <Grid Margin="395,428,0,86">
            <Button x:Name="RegisterButton" 
            Content="Зарегистрироваться" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Width="338" 
            Height="47" 
            FontSize="20" 
            Background="#FFDE4949" 
            Foreground="White" 
            Margin="10,0,0,0" 
            BorderBrush="{x:Null}" 
            Click="RegisterButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <Grid Margin="395,486,0,28" Cursor="Hand">
            <Button Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Center" Height="45" Width="338" Click="Button_Click" Background="#FFDE4949" FontSize="20" Margin="10,0,0,0" Foreground="White" BorderBrush="{x:Null}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
        <Grid Margin="395,324,0,146">
            <Label Content="Повторите пароль" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="22" Margin="18,-11,0,0"/>
            <TextBox x:Name="ConfirmPasswordTextBox" 
         Text="Повторите пароль" 
         HorizontalAlignment="Left" 
         VerticalAlignment="Top" 
         FontSize="18" 
         Foreground="#FFCACACA" 
         BorderBrush="{x:Null}" 
         Margin="22,33,0,0" 
         Height="29"
         TextChanged="TextBox_TextChanged"
         GotFocus="TextBox_GotFocus"
         LostFocus="TextBox_LostFocus"/>
        </Grid>
        <Grid Margin="397,238,-2,235">
            <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="22" Margin="17,3,0,0"/>
            <TextBox x:Name="PasswordTextBox" 
         Text="Введите пароль" 
         HorizontalAlignment="Left" 
         Margin="20,47,0,0" 
         VerticalAlignment="Top" 
         FontSize="18" 
         Foreground="#FFCACACA" 
         BorderBrush="{x:Null}" 
         Height="27"
         TextChanged="TextBox_TextChanged"
         GotFocus="TextBox_GotFocus"
         LostFocus="TextBox_LostFocus" Width="154"/>
        </Grid>





    </Grid>

</Window>
