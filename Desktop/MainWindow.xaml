<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="598" Width="800">
    <Grid Margin="10,10,0,0">
        <Grid Margin="395,0,0,392">
            <Label Content="Добро пожаловать!" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Margin="0,53,0,0"/>
        </Grid>

        <Grid Margin="390,180,0,270">
            <Label Content="Почта" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24"/>
            <TextBox Text="pangcheo121o@gmail.com" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" FontSize="18" BorderBrush="{x:Null}"/>
            <Label Content="_____________________________________________________________________________________________________________" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFCACACA" FontSize="22" Width="345"/>
        </Grid>

        <Grid Margin="390,286,0,185">
            <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" FontSize="24"/>
            <TextBox Text="Введите пароль" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFCACACA" BorderBrush="{x:Null}"/>
            <Label Content="_____________________________________________________________________________________________________________" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFCACACA" FontSize="22" Width="345"/>
        </Grid>

        <Grid Margin="0,0,400,0">
            <Image HorizontalAlignment="Left" Height="190" Margin="46,39,0,0" VerticalAlignment="Top" Width="207" Source="/Рисунок1.png"/>
        </Grid>

        <Grid Margin="395,428,0,86">
            <Button Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Center" Width="338" Height="47" FontSize="20" Background="#FFDE4949" Foreground="White" Margin="10,0,0,0" BorderBrush="{x:Null}" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
            </Button>
        </Grid>

        <Grid Margin="395,486,0,28" Cursor="Hand">
            <Button Content="Регистрация" HorizontalAlignment="Left" VerticalAlignment="Center" Height="45" Width="338" Click="Button_Click" Background="#FFDE4949" FontSize="20" Margin="10,0,0,0" Foreground="White" BorderBrush="{x:Null}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
        <Grid Margin="395,387,0,162">
            <Button Content="Восстановить пароль" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{x:Null}" Height="42" Width="213" FontSize="20" BorderBrush="{x:Null}" Margin="143,0,0,0"/>
        </Grid>





    </Grid>

</Window>
