<Page x:Class="Desktop.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegistrationPage" Height="600" Width="800" Background="#1A1A1A">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Source="/Рисунок1.png" Width="200" Height="200" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Welcome back" FontSize="30" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <Label Content="Имя пользователя" FontSize="16" Foreground="White"/>
            <TextBox x:Name="NameTextBox" FontSize="14" Background="Transparent" Foreground="#FFCACACA" BorderThickness="0,0,0,1" BorderBrush="#FFCACACA" Margin="5,0,5,15" Padding="0,5"/>

            <Label Content="Ваша почта" FontSize="16" Foreground="White"/>
            <TextBox x:Name="EmailRegTextBox" FontSize="14" Background="Transparent" Foreground="#FFCACACA" BorderThickness="0,0,0,1" BorderBrush="#FFCACACA" Margin="5,0,5,15" Padding="0,5"/>

            <Label Content="Пароль" FontSize="16" Foreground="White"/>
            <PasswordBox x:Name="PassRegBox" FontSize="14" Background="Transparent" Foreground="White" BorderThickness="0,0,0,1" BorderBrush="#FFCACACA" Margin="5,0,5,15" Padding="0,5"/>

            <Label Content="Повторите пароль" FontSize="16" Foreground="White"/>
            <PasswordBox x:Name="ConfirmPassBox" FontSize="14" Background="Transparent" Foreground="White" BorderThickness="0,0,0,1" BorderBrush="#FFCACACA" Margin="5,0,5,30" Padding="0,5"/>

            <Button Content="Зарегистрироваться" x:Name="DoRegisterButton" Click="DoRegisterButton_Click" Height="45" Background="#FFDE4949" Foreground="White" FontSize="18" Margin="0,0,0,10">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Назад" Click="BackToLogin_Click" Background="Transparent" BorderBrush="{x:Null}" Foreground="#FFCACACA" Cursor="Hand" FontSize="14"/>
        </StackPanel>
    </Grid>
</Page>